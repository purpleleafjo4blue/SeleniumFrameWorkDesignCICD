<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" name ="Suite">

  <groups>
	  <run>
		  <include name="Purchase"/>
	  </run>
  </groups>
  
  <listeners>
	<listener class-name="Sample.FrameworkDesign.TestComponents.Listeners" />
</listeners>
  
  <test thread-count="5" name="Submit Order Test">
    <classes>
      <class name="Sample.FrameworkDesign.Tests.SubmitOrderTest"/>
    </classes>
  </test> <!-- Test -->
  <test thread-count="5" name="Error Validations Test">
    <classes>
      <class name="Sample.FrameworkDesign.Tests.ErrorValidationsTest"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
